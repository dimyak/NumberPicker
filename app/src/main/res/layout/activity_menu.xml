<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />
    <Button
        android:id="@+id/btnInfo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_info_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        />
    <Button
        android:layout_alignBottom="@+id/btnPlay"
        android:layout_marginBottom="142dp"
        android:gravity="center"
        android:id="@+id/btnMinus"
        android:background="@drawable/bg_grey"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:text="-"
        android:textSize="@dimen/label_text_size"
        android:textColor="@color/bgRed"
        android:layout_toLeftOf="@+id/tvMatrixSize"

        android:layout_marginRight="@dimen/sides"
        />


    <TextView
        android:layout_alignBottom="@+id/btnPlay"
        android:layout_marginBottom="142dp"
        android:background="@drawable/bg_grey"

        android:textColor="@color/bgRed"
        android:gravity="center"

        android:id="@+id/tvMatrixSize"
        android:text="5"
        android:textStyle="bold"
        android:textSize="@dimen/label_text_size"

        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_alignBottom="@+id/btnPlay"
        android:layout_marginBottom="142dp"
        android:gravity="center"
        android:id="@+id/btnPlus"
        android:background="@drawable/bg_grey"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:text="+"
        android:textSize="@dimen/label_text_size"
        android:textColor="@color/bgRed"
        android:layout_toRightOf="@+id/tvMatrixSize"

        android:layout_marginLeft="@dimen/sides"
        />

    <Button
        android:id="@+id/btnPlay"
        android:background="@drawable/bg_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="154dp"

        android:text="Play"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/label_text_size"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        />

</RelativeLayout>
